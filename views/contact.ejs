<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Daftar Contact</h2>
      <a href="/contact/add" class="btn btn-info mb-2">Tambah Data Contact</a>
      <% if (msg.length !== 0) { %>
        <div class="alert alert-success"><%= msg %></div>
      <% } %>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nama</th>
            <th scope="col">Telepon</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length === 0) { %>
            <tr>
              <td colspan="4">
                <div class="alert alert-danger" role="alert">
                  <h2>Data contact tidak ada!</h2>
                </div>
              </td>
            </tr>
          <% } %>
          <% contacts.forEach((contact, i) => { i++ %>
            <tr>
              <th scope="row"><%= i++ %> </th>
              <td><%= contact.nama %> </td>
              <td><%= contact.telepon %> </td>
              <td>
                <a href="/contact/<%= contact.nama %> " class="btn btn-primary badge badge-pill"><i class="bi bi-info-circle"></i> Detail</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>