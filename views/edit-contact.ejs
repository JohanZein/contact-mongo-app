<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h2>Form Ubah Data Contact</h2>
      <% if (typeof errors != 'undefined') { %>
        <div class="alert alert-danger" role="alert">
          <ul>
            <% errors.forEach(error => { %>
              <li><%= error.msg %></li>
            <% }) %>
          </ul>
        </div>
      <% } %> 
      <form method="post" action="/contact?_method=PUT">
        <input type="hidden" name="_id" value="<%= contact._id %>">
        <input type="hidden" name="oldNama" value="<%= contact.oldNama || contact.nama %>">
        <input type="hidden" class="form-control" id="oldNama" name="oldNama" value="<%= (contact.oldNama) ? contact.oldNama : contact.nama %>" required>
        <div class="form-group">
          <label for="nama">Nama</label>
          <input type="text" class="form-control" id="nama" name="nama" value="<%= contact.nama %>" required>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" class="form-control" id="email" name="email" value="<%= contact.email %>" required>
        </div>
        <div class="form-group">
          <label for="telepon">Telepon</label>
          <input type="text" class="form-control" id="telepon" name="telepon" value="<%= contact.telepon %>" required>
        </div>
        <button type="submit" class="btn btn-primary">Ubah Data Contact</button>
      </form>
    </div>
  </div>
</div>